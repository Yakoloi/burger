<div class="container-fluid back">
  <div class="row red">
    <h1 class="text-center">Eat the burger!</h1>
    <img id="burger-image" src="/assets/img/burger.png" alt="burger" class="img-responsive center-block" />
  </div>
  <div class="row">
    <div class="col-xs-1">
    </div>
    <div class="col-xs-5">
      <h2>Ready to eat!</h2>
      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
          <li>
           <h4> {{this.burger_name}} </h4>
                <form id="eat" action="/{{this.id}}?_method=PUT" method="POST">
                  <input type="hidden" name="devoured" value="true">
                  <button class="btn-success" type="submit">Eat Me!</button>
                </form>
          </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-xs-5">
      <h2>Yum! You've eaten these!</h2>
      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
          <li>
            {{this.burger_name}}
          </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
        <div class="col-xs-1">
    </div>
  </div>

  <div class="col-md-4 col-md-offset-4">
    <form method="POST" action="/">
      <div class="form-group">
        <label class="control-label">Cook new Burger!</label>
        <textarea type="text" class="form-control" name="burger"></textarea>
      </div>      
      <div class="form-group">
        <button class="btn btn-danger" type="submit">Submit</button>
      </div>  
    </form>	

  </div>

</div>